#!/bin/bash
declare -i errors
declare -a package_errors
errors=0

if [ $# -eq 1 ]
then
  brewfile=$1
elif [ $# -eq 0 ]
then
  brewfile="$(pwd)/Brewfile"
else
  echo "Usage: brew_bundle [/path/to/Brewfile]"
  exit 1
fi

send_to_brew () {
  echo "Running: brew $@"
  $(which brew) $@
  if [[ $? != 0 ]]
  then
    errors+=1
    package_errors+="$@\n"
    echo -e "\x1b[31;1mCommand failed: brew $@\x1b[39;49m"
  fi
  echo '-------'
}

if [[ -f $brewfile ]];
then
  while read line
  do
    if  [[ "x$line" != "x" ]] # skip blank lines
    then
      if [[ ! "${line::1}" == "#" ]] # skip commented lines
      then
        send_to_brew "$line"
      fi
    fi
  done < $brewfile # read the brewfile line by line
else
  echo "Brewfile not found at $brewfile"
  exit 1
fi

if [[ $errors != 0 ]]
then
  echo "The following commands had errors:"
  echo -e "$package_errors"
  exit $errors
fi
